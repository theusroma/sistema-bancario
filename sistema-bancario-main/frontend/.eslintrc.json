{
    "extends": [
      "react-app",
      "plugin:tailwindcss/recommended"
    ],
    "rules": {
      // Regras para compatibilidade com React 19 (JSX Transform)
      "react/react-in-jsx-scope": "off",
      "react/jsx-uses-react": "off",

      // Desativa a regra de classes não utilizadas (falsos positivos do Tailwind)
      "css-modules/no-unused-class": "off",

      // Desativa a regra que gera avisos de "classe desconhecida" no linter
      "tailwindcss/no-custom-classname": "off" 
    },
    "settings": {
      "tailwindcss": {
        "callees": ["classnames", "clsx", "ctl"]
        // Removemos a configuração para usar o modo de descoberta automática do linter
      }
    }
}